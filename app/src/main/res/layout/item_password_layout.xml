<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/pass_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:padding="5dp"
                android:singleLine="true"
                android:text="@string/heading"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pass_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/google_sans_regular"
                android:gravity="right|center"
                android:paddingEnd="5dp"
                android:text="23/04/2002"
                android:textColor="#8E8B8B"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="965245600914"
                android:padding="5dp"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_id_24" />

            <ImageView
                android:id="@+id/copy_id"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:padding="3dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_copy" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="**************"
                android:padding="5dp"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_lock_person" />

            <ImageView
                android:id="@+id/copy_pass"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:padding="3dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_copy" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>